@model Backend.Models.CountViewModel
@{
    ViewData["Title"] = "DashBoard";
}
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#startingRange').datepicker({
                changeMonth: true,
                changeYear: false,
                format: "dd/mm/yyyy",
                language: "tr"
            });
        });
        $(function () {
            $('#endingRange').datepicker({
                changeMonth: true,
                changeYear: false,
                format: "dd/mm/yyyy",
                language: "tr"
            });
        });
    </script>
}
<div class="text-center">
    <h1 class="display-4">DashBoard</h1>
    <div class="container mt-3">
        <div class="">
            <div class="pt-5">
                <div class="row justify-content-around">
                    <div class="col-2 border">
                        <div class="d-inline-flex">
                            <div class=" align-self-center ">
                                <img src="./images/admins.png" height="35" alt="">
                            </div>
                            <div class="p-2 mt-2">
                                <p class="titles">Number of Admins</p>
                                <p class="text-center">@Model.CountAd</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-2 border">
                        <div class="d-inline-flex">
                            <div class=" align-self-center ">
                                <img src="./images/user.png" height="35" alt="">
                            </div>
                            <div class="p-2 mt-2">
                                <p class="titles">Number of Clients</p>
                                    <p class="text-center">@Model.CountUs</p>

                            </div>
                        </div>
                    </div>
                    <div class="col-2 border">
                        <div class="d-inline-flex">
                            <div class=" align-self-center ">
                                <img src="./images/walletsIcon.png" height="35" alt="">
                            </div>
                            <div class="p-2 mt-2">
                                <p class="titles">Number of Connected Wallets</p>
                                    <p class="text-center">@Model.CountAll</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="row mt-3">
                    <div class="col text-lg-end">
                        <button type="button" class="btn btn-outline-light" data-target="#dateModel" data-toggle="modal"><img src="./images/calendar.png" width="30" height="30" /></button>
                        <div class="container">
                            <div class="row">
                                <div class="col col-sm-12">
                                    <div class="modal" data-keyboard="false" data-backdrop="static" id="dateModel" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="modal-basic-title">Date Range</h4>
                                                    <button class="btn-close" data-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form>
                                                        <div class="mb-3">
                                                            <label for="startingRange">Starting Date</label>
                                                            <div class="input-group">
                                                                <input id="startingRange" class="form-control" placeholder="yyyy-mm-dd" name="dp" />
                                                                <button class="btn btn-outline-secondary" disabled><img src="./images/calendar.png" height="25" alt=""></button>
                                                            </div>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="endingRange">Ending Date</label>
                                                            <div class="input-group">
                                                                <input id="endingRange" class="form-control" placeholder="yyyy-mm-dd" name="dp" />
                                                                <button class="btn btn-outline-secondary" disabled><img src="./images/calendar.png" height="25" alt=""></button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <button class="btn btn-outline-secondary" data-dismiss="modal">Save</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h4>Number of clients per months</h4>
                    <canvas id="myChart"></canvas>
                </div>
                <div class="col-lg-6">
                    <h4>Number of logins per months</h4>
                    <canvas id="myChartTwo"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('myChart');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
            datasets: [{
                label: 'Number of Clients',
                data: [12, 19, 30, 52, 15, 22, 33, 56, 12, 6, 18, 55],
                borderWidth: 2
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    const ctxTwo = document.getElementById('myChartTwo');
    new Chart(ctxTwo, {
        type: 'line',
        data: {
            labels: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
            datasets: [{
                label: 'Number of Logins',
                data: [5033, 5732, 5634, 6932, 7002, 6022, 4502, 4999, 6921, 6032, 4996, 5002],
                borderWidth: 2
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>