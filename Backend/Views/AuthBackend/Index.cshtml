@model Backend.Models.Login
@{
    ViewData["Title"] = "Login";
}
<div class="container-fuild ">
    <div class="container">
        <h1 class="text-center display-6 mt-3 mb-3">Login</h1>
        <div>
            <form method="post" asp-controller="AuthBackend" asp-action="Login" class="mt-5">
                <div class="form-group d-flex align-items-center justify-content-center mb-3 pt-3">
                    <div class="col-sm-4">
                        <input type="email" asp-for="Email" class="form-control" id="inputEmail" placeholder="Email" name="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group d-flex align-items-center justify-content-center pt-2">
                    <div class="col-sm-4">
                        <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="Password" name="password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="buttonDiv d-grid mt-4">
                    <button type="submit" class="btn btn-primary" id="submitButton">Sign in</button>
                </div>
            </form>
        </div>
    </div>
</div>